{   
    "name": "default",
    "schema": "v1",
    "description": "Default recipe for plaintext documents",
    "language": "en",
    "metadata": {
        "version": "0.1.0",
        "author": "Chonkie Team"
    },
    "recipe": {
        "delimiters": [". ", "! ", "? ", "\n"],
        "include_delim": "prev",
        "recursive_rules": {
            "levels": 
            [
            {
                "delimiters": [
                    "\n\n", 
                    "\n\r"
                ],
                "whitespace": false,
                "include_delim": "next"
            },
            {
                "delimiters": [
                    "\n",
                    "\r"
                ],
                "whitespace": false,
                "include_delim": "prev"
            },
            {
                "delimiters": [
                    ". ",
                    "! ",
                    "? "
                ],
                "whitespace": false,
                "include_delim": "prev"
            },
            {
                "delimiters": null,
                "whitespace": true,
                "include_delim": "prev"
            },
            {
                "delimiters": null,
                "whitespace": false,
                "include_delim": "prev"
            }
        ]
    }
    }
}